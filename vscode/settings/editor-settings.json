{
    /*
        Most settings are from
        - https://code.visualstudio.com/docs/getstarted/settings#_default-settings
    */
    // Word wrap
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    // Indent using 4 spaces
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // Do not trim whitespaces
    "editor.trimAutoWhitespace": false,
    // Relative line numbers (like in neovim)
    "editor.lineNumbers": "relative",
    // Treat underscore "_" as a word separator
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
    // JSON has comments
    "files.associations": {
        "*.json": "jsonc"
    },
    // Bracket pair colorizer: https://code.visualstudio.com/blogs/2021/09/29/bracket-pair-colorization
    "editor.bracketPairColorization.enabled": true,
    // Sticky scrolling (function context)
    "editor.stickyScroll.enabled": true,
    // Remote SSH (if not working properly)
    //  From: https://github.com/microsoft/vscode-remote-release/issues/6521#issuecomment-1102971821
    "remote.SSH.useLocalServer": false,
    // Spelling
    //  From: https://streetsidesoftware.com/vscode-spell-checker/docs/configuration/
    "cSpell.customDictionaries": {
        "custom-dictionary-folder-lidar-external-object-detection": {
            "name": "custom-dictionary-folder-lidar-external-object-detection",
            "path": "${workspaceFolder:LiDAR External Object Detection}/.cspell/custom-dictionary-folder-lidar-external-object-detection.txt",
            "addWords": true,
            "scope": "folder"
        }
    },
    /*
        Preferences for file types (languages)
    */
    // reStructuredText files
    "[restructuredtext]": {
        "editor.wordWrap": "on",
    },
    // Dockerfile
    "[dockerfile]": {
        "editor.rulers": [80]
    },
    // Bash scripts
    "[shellscript]": {
        "files.eol": "\n",
        "editor.rulers": [75, 80]
    },
    "[html][javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[latex][bibtex]": {
        "editor.formatOnPaste": false,
        "editor.suggestSelection": "recentlyUsedByPrefix",
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.rulers": [75],
        "rewrap.wrappingColumn": 75
    },
}