/*
    Extension: VSCodeVim
    Ref: https://github.com/VSCodeVim/Vim
*/
{
    // Ignore basic key handles (for convenience)
    "vim.handleKeys": {
        "<C-d>": true,
        // Clipboard shortcuts
        "<C-x>": false,
        "<C-c>": false,
        "<C-v>": false,
        // Side panel
        "<C-b>": false,
        // Select all
        "<C-a>": false,
        // Indentation
        "<C-[>": false,
        "<C-]>": false,
        // Find
        "<C-f>": false,
        // Find symbol
        "<C-t>": false,
        // Split horizontal (Ctrl+K Ctrl+\)
        "<C-k>": false,
        // Open file and command palette (Ctrl+p)
        "<C-p>": false,
    },
    // Sync the system clipboard as default register in Vim
    "vim.useSystemClipboard": true
}
