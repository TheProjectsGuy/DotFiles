/* 
 Ref: https://code.visualstudio.com/docs/getstarted/settings
*/
{
    // Word wrap
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    /*
        Language specific settings
        Ref: https://code.visualstudio.com/docs/getstarted/settings#_languagespecific-editor-settings
    */
    "[python]": {
        "editor.wordBasedSuggestions": false,
        "editor.rulers": [70, 90]
    },
    /*
        Extension: DavidAnson.vscode-markdownlint
        Ref: https://github.com/DavidAnson/vscode-markdownlint#configure
        Rules: https://github.com/DavidAnson/vscode-markdownlint#rules
    */
    "markdownlint.config": {
        "MD033": false  // Allow inline HTML
    },
    /*
        Python settings
        Reference: https://code.visualstudio.com/docs/python/settings-reference
    */
    "python.analysis.extraPaths": [
        "C:\\Users\\User\\Python_path_to_add",
        "C:\\Users\\User\\Another_python_path_to_add"
    ],
    /*
        Python Linting
        Reference: https://code.visualstudio.com/docs/python/linting#_pylint
    */
    "python.linting.pylintArgs": [
        "--disable=all",
        "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode",
        "--disable=E0401"   // Ignore import-error messages (add correct paths)
    ],
    // Ignore files when linting things
    "python.linting.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "Python/tests/**/*.py"
    ],
    /*
        Integrated Terminal Editor profiles
    */
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "PowerShell-Conda": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": [   // Common practice to have Conda-Init
                "-NoExit",
                "-Command", "Conda-Init"
            ]
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },
    // Setting a default terminal profile (Windows)
    "terminal.integrated.defaultProfile.windows": "PowerShell-Conda",
}
