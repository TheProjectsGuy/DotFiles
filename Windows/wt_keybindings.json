// Edit the windows terminal settings as JSON
{
    "actions": 
    [
        // WSL Ubuntu: Split planes like terminator
        {
            "command":
            {
                "action": "splitPane",
                "profile": "Ubuntu",
                "split": "horizontal"
            },
            "keys": "ctrl+shift+o"
        },
        {
            "command":
            {
                "action": "splitPane",
                "profile": "Ubuntu",
                "split": "vertical"
            },
            "keys": "ctrl+shift+e"
        },
        // Split pane (with duplicate profile)
        {
            "command": 
            {
                "action": "splitPane",
                "split": "auto",
                "splitMode": "duplicate"
            },
            "keys": "alt+shift+d"
        },
        {
            "command": 
            {
                "action": "newTab"
            },
            "keys": "ctrl+shift+t"
        },
        // Toggle the zoom (make pane full screen)
        {
            "command": "togglePaneZoom",
            "keys": "alt+shift+x"
        }
    ]
}
